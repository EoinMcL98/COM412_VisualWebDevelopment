@page
@model CinemaBooking.Pages.Queries.Query1Model
@{
    ViewData["Title"] = "SearchFilmByGenre";
}

<h2>Search Film By Genre</h2>

<form>
    <p>
        <select asp-for="FilmGenre" asp-items="Model.Films">
            <option value=""></option>
        </select>

        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].FilmID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].FilmTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Genre)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Film)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FilmID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilmTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
            </tr>
        }
    </tbody>
</table>



